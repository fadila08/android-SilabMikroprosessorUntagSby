<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:background="@drawable/pcbblur"
    tools:showIn="@layout/app_bar_login"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<android.support.v7.widget.Toolbar-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="?attr/actionBarSize"-->
            <!--android:background="@color/colorOrange"-->
            <!--app:title="LOGIN"-->
            <!--app:titleMarginStart="180dp"-->
            <!--android:gravity="center"-->
            <!--app:titleTextColor="@color/colorbgBlue"-->
            <!--android:id="@+id/toolbar"-->
            <!--android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
            <!--app:popupTheme="@style/ThemeOverlay.AppCompat.Light"-->
            <!--android:elevation="4dp"/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bgputihlogin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USERNAME"
                android:textColor="@color/colorbgBlue"
                android:layout_marginTop="70dp"
                android:layout_marginStart="20dp"
                />

            <EditText
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Username Anda"
                android:textAlignment="center"
                android:background="@drawable/edittextlogin"
                android:textColorHint="@color/colorAbuAbu"
                android:layout_marginTop="90dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/txt_username"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PASSWORD"
                android:textColor="@color/colorbgBlue"
                android:layout_marginStart="20dp"
                android:layout_marginTop="170dp"
                />

            <EditText
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Password Anda"
                android:textAlignment="center"
                android:background="@drawable/edittextlogin"
                android:textColorHint="@color/colorAbuAbu"
                android:layout_marginTop="190dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="textPassword"
                android:id="@+id/txt_password"
                />

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lupa Password?"
                android:textStyle="bold"
                android:textColor="@color/colorbgBlue"
                android:layout_marginTop="255dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="100dp" />

            <Button
                android:elevation="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btlogin"
                android:text="LOGIN"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorbgBlue"
                android:background="@color/colorOrange"
                android:layout_marginTop="320dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-445dp"
            android:layout_gravity="center"
            >
            <ImageView
                android:foregroundGravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/logomikrojadi"
                />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universitas 17 Agustus 1945\nSurabaya"
        android:textAlignment="center"
        android:textColor="@color/colorTulisanUniv"
        android:textSize="17sp"
        android:textStyle="bold"
        android:gravity="bottom"
        android:layout_marginBottom="40dp"
        />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/dawer_menu"
        />
</android.support.v4.widget.DrawerLayout>