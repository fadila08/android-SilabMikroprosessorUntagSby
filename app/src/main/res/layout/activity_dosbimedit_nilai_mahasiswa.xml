<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:background="@color/colorTulisanUniv"
    tools:context=".DOSBIMEditNilaiMahasiswa"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorOrange"
            app:title="DATA NILAI MAHASISWA"
            app:titleMarginStart="93dp"
            android:textAlignment="center"
            app:titleTextColor="@color/colorbgBlue"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"/>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:background="@color/colorAbuAbu">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Silahkan Edit\nData Nilai Mahasiswa"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NBI"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Tugas Pendahuluan"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="200dp">

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pertemuan 1"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv1"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et1"
                            android:text="Pertemuan 2"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv2"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et2"
                            android:text="Pertemuan 3"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv3"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et3"
                            android:text="Pertemuan 4"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv4"
                            android:textAlignment="center" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Abstrak Praktikum"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="200dp">

                        <TextView
                            android:id="@+id/tv11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pertemuan 1"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv11"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et11"
                            android:text="Pertemuan 2"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv22"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et22"
                            android:text="Pertemuan 3"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et33"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv33"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv44"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et33"
                            android:text="Pertemuan 4"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et44"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv44"
                            android:textAlignment="center" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Aktivitas Praktikum"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="200dp">

                        <TextView
                            android:id="@+id/tv111"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pertemuan 1"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et111"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv111"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et111"
                            android:text="Pertemuan 2"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et222"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv222"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et222"
                            android:text="Pertemuan 3"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et333"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv333"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv444"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et333"
                            android:text="Pertemuan 4"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et444"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv444"
                            android:textAlignment="center" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Tugas Paska Praktikum"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="200dp">

                        <TextView
                            android:id="@+id/tv1111"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pertemuan 1"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et1111"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv1111"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv2222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et1111"
                            android:text="Pertemuan 2"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et2222"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv2222"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv3333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et2222"
                            android:text="Pertemuan 3"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et3333"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv3333"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv4444"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et3333"
                            android:text="Pertemuan 4"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et4444"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv4444"
                            android:textAlignment="center" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tes Akhir"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bimbingan Dosen"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Laporan"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                    <Spinner
                        android:entries="@array/laporan"
                        android:textAlignment="center"
                        android:layout_marginEnd="25dp"
                        android:padding="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></Spinner>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nilai Akhir"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grade"
                        android:textColor="@color/colorBlack"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="50dp"
                        android:layout_marginStart="45dp"
                        android:layout_marginEnd="45dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Simpan"
                        android:background="@color/colorOrange"
                        />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_dosbim"
        app:menu="@menu/dawer_menu_dosbim"
        />

</android.support.v4.widget.DrawerLayout>