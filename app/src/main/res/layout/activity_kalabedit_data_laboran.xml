<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:background="@color/colorTulisanUniv"
    tools:context=".KALABEditDataLaboran"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorOrange"
            app:title="DATA LABORAN"
            app:titleMarginStart="133dp"
            android:textAlignment="center"
            app:titleTextColor="@color/colorbgBlue"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"/>

        <RelativeLayout
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:gravity="fill_vertical"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAbuAbu"
            android:paddingBottom="30dp"
            >

            <TextView
                android:layout_marginTop="25dp"
                android:id="@+id/tvmasukkan"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubah Data Lama\nLaboran"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:textStyle="bold"
                />

            <EditText
                android:layout_below="@+id/tvmasukkan"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/etnama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama"
                android:textSize="18sp"
                />
            <EditText
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/etnip"
                android:layout_below="@+id/etnama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NIP"
                android:textSize="18sp"
                />
            <EditText
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/etnip"
                android:id="@+id/etwa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Whatsapp"
                android:textSize="18sp"
                />
            <EditText
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/etemail"
                android:layout_below="@+id/etwa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alamat Email"
                android:textSize="18sp"
                />
            <Button
                android:background="@color/colorOrange"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:id="@+id/bttambah"
                android:layout_below="@+id/etemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                />
        </RelativeLayout>


        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_kalab"
        app:menu="@menu/dawer_menu_kalab"
        />

</android.support.v4.widget.DrawerLayout>