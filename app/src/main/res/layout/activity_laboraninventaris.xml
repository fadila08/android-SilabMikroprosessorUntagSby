<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:background="@color/colorTulisanUniv"
    tools:context=".LABORANMasukkanInventarisLab"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorOrange"
            app:title="INVENTARIS LABORATORIUM"
            app:titleMarginStart="63dp"
            android:textAlignment="center"
            app:titleTextColor="@color/colorbgBlue"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"/>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="fill_vertical"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAbuAbu"
            android:paddingBottom="30dp"
            >

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/print"
                android:layout_below="@+id/plus"
                android:layout_marginEnd="12dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/imageprint"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tvdatamhs"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar\nInventaris Laboratorium"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/tvdatamhs"
                android:id="@+id/rvnama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvnamamhs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Barang"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    />
                <TextView
                    android:id="@+id/tvmhs"
                    android:layout_below="@+id/tvnamamhs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Barang 1"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="15dp"
                android:gravity="left"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="80dp"
                android:layout_below="@+id/tvdatamhs"
                android:layout_toRightOf="@+id/rvnama"
                android:id="@+id/rvnip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvnbi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    />
                <TextView
                    android:layout_below="@+id/tvnbi"
                    android:id="@+id/tvnbimhs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="-70dp"
                android:gravity="left"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/tvdatamhs"
                android:layout_toRightOf="@+id/rvnip"
                android:id="@+id/rvnilai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvnilai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kondisi"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    />
                <TextView
                    android:layout_below="@+id/tvnilai"
                    android:id="@+id/tvnilaimhs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baik"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="-1dp"
                android:gravity="left"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/tvdatamhs"
                android:layout_toRightOf="@+id/rvnilai"
                android:id="@+id/rvtindakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvtindakan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tindakan"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    />
                <TextView
                    android:layout_below="@+id/tvtindakan"
                    android:id="@+id/tvtrash"
                    android:drawableRight="@drawable/imagetrash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </RelativeLayout>


        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_laboran"
        app:menu="@menu/dawer_menu_laboran"
        />

</android.support.v4.widget.DrawerLayout>