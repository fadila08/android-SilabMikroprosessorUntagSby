<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:background="@color/colorTulisanUniv"
    tools:context=".LABORANDataMahasiswa"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorOrange"
            app:title="DATA MAHASISWA"
            app:titleMarginStart="113dp"
            android:textAlignment="center"
            app:titleTextColor="@color/colorbgBlue"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"/>

        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:gravity="fill_vertical"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:background="@color/colorTulisanUniv"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tvpraktikum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Praktikum"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="35dp"
                />
            <Spinner
                android:entries="@array/daftar_praktikum"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_below="@+id/tvpraktikum"
                android:id="@+id/spinpraktikum"
                android:layout_width="match_parent"
                android:layout_height="30dp">
            </Spinner>
            <TextView
                android:layout_below="@+id/spinpraktikum"
                android:id="@+id/tvtahunajaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tahun Ajaran"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="35dp"
                />
            <Spinner
                android:entries="@array/tahun_ajaran"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_below="@+id/tvtahunajaran"
                android:id="@+id/spintahunajaran"
                android:layout_width="match_parent"
                android:layout_height="30dp">
            </Spinner>
            <TextView
                android:layout_below="@+id/spintahunajaran"
                android:id="@+id/tvkelas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelas"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="35dp"
                />
            <Spinner
                android:entries="@array/kelas"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_below="@+id/tvkelas"
                android:id="@+id/spinkelas"
                android:layout_width="match_parent"
                android:layout_height="30dp">
            </Spinner>
            <TextView
                android:layout_below="@+id/spinkelas"
                android:id="@+id/tvsemester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="35dp"
                />
            <Spinner
                android:entries="@array/semester"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_below="@+id/tvsemester"
                android:id="@+id/spinsemester"
                android:layout_width="match_parent"
                android:layout_height="30dp">
            </Spinner>

            <Button
                android:layout_below="@+id/spinsemester"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tampilkan"
                android:layout_marginTop="25dp"
                android:background="@color/colorOrange"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="fill_vertical"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAbuAbu"
            android:paddingBottom="30dp"
            >

            <TextView
                android:id="@+id/plus"
                android:layout_marginEnd="20dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="30dp"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:id="@+id/print"
                android:layout_below="@+id/plus"
                android:layout_marginEnd="12dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/imageprint"
                android:textColor="@color/colorBlack"
                />
            <TextView
                android:id="@+id/upload"
                android:layout_below="@+id/print"
                android:layout_marginEnd="12dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/imageupload"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:layout_marginTop="25dp"
                android:id="@+id/tvdatamhs"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data\nMahasiswa"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_marginStart="80dp"
                android:layout_below="@+id/tvdatamhs"
                android:id="@+id/rvnama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvnamamhs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    />
                <TextView
                    android:id="@+id/tvmhs"
                    android:layout_below="@+id/tvnamamhs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resha Pratama"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:gravity="right"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="80dp"
                android:layout_below="@+id/tvdatamhs"
                android:layout_toRightOf="@+id/rvnama"
                android:id="@+id/rvnip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvnbi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NBI"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    />
                <TextView
                    android:layout_below="@+id/tvnbi"
                    android:id="@+id/tvnbimhs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1461600258"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_laboran"
        app:menu="@menu/dawer_menu_laboran"
        />

</android.support.v4.widget.DrawerLayout>