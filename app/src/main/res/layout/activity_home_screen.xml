<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen"
    android:background="@drawable/pcbblur"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="-50dp"
            android:src="@drawable/logomikrojadi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="Selamat Datang Di Silab Mikroprosessor\nUntag Surabaya"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="19sp" />

        <Button
            android:elevation="5dp"
            android:id="@+id/btnlogin"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@color/colorOrange"
            android:onClick="LOGIN"
            />

        <Button
            android:id="@+id/btnprofil"
            android:drawableLeft="@drawable/blackperson"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PROFIL"
            android:textAlignment="textStart"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="37dp"
            android:onClick="PROFIL"
            />

        <Button
            android:id="@+id/btnstruktur"
            android:drawableLeft="@drawable/imagestrukturorg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STRUKTUR ORGANISASI"
            android:textAlignment="textStart"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="37dp"
            android:onClick="STRUKTURORG"
            />

        <Button
            android:id="@+id/btnpengumuman"
            android:drawableLeft="@drawable/imagepengumuman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PENGUMUMAN"
            android:textAlignment="textStart"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="37dp"
            android:onClick="PENGUMUMAN"
            />

        <Button
            android:id="@+id/btnunduhan"
            android:drawableLeft="@drawable/imageunduhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UNDUHAN"
            android:textAlignment="textStart"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="37dp"
            android:onClick="UNDUHAN"
            />

        <Button
            android:id="@+id/btngaleri"
            android:drawableLeft="@drawable/imagegaleri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GALERI"
            android:textAlignment="textStart"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="37dp"
            android:onClick="GALERI"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>