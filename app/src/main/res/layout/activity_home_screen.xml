<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.HomeScreen"
    android:background="@drawable/pcbblur">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logomikrojadi" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunitosans_regular"
            android:text="Selamat Datang Di Silab Mikroprosessor\nUntag Surabaya"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:elevation="5dp"
            android:id="@+id/btnlogin"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:background="@color/colorOrange"
            android:onClick="LOGIN"
            />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnprofil"
                android:drawableLeft="@drawable/blackperson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROFIL"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:onClick="PROFIL"
                />
            <Button
                android:id="@+id/btnstruktur"
                android:drawableLeft="@drawable/imagestrukturorg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STRUKTUR ORGANISASI"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:onClick="STRUKTURORG"
                />
            <Button
                android:id="@+id/btnpengumuman"
                android:drawableLeft="@drawable/imagepengumuman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PENGUMUMAN"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:onClick="PENGUMUMAN"
                />
            <Button
                android:id="@+id/btnunduhan"
                android:drawableLeft="@drawable/imageunduhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UNDUHAN"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:onClick="UNDUHAN"
                />
            <Button
                android:id="@+id/btngaleri"
                android:drawableLeft="@drawable/imagegaleri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GALERI"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:onClick="GALERI"
                />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>