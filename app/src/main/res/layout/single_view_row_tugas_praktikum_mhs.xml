<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardBackgroundColor="@color/colorAbuAbu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:textColor="#62000000"
                android:textSize="28px"
                android:padding="3dp"
                android:fontFamily="@font/roboto_regular"
                android:id="@+id/txt_judul_tugas_praktikum_mhs"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:textColor="#62000000"
                android:textSize="28px"
                android:padding="3dp"
                android:fontFamily="@font/roboto_regular"
                android:id="@+id/txt_judul_file_tugas_praktikum_mhs"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">
            <Button
                android:layout_marginTop="16px"
                android:layout_width="70px"
                android:layout_height="70px"
                android:background="@drawable/delete_icon"
                android:id="@+id/btn_delete_tugas_praktikum_mhs"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
