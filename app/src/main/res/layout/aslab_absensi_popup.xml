<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:padding="5dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <Button
            android:layout_width="50px"
            android:layout_height="60px"
            android:background="@drawable/edit_icon"
            android:id="@+id/btn_edit_absensi_aslab" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="Nama          "
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:text=""
            android:id="@+id/txt_detail_nama_mhs_absensi_aslab"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="NBI              "
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:text=""
            android:id="@+id/txt_detail_nbi_mhs_absensi_aslab"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="Pertemuan 1          "
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:text=""
            android:id="@+id/txt_detail_p1_absensi_aslab"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="Pertemuan 2     "
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:text=""
            android:id="@+id/txt_detail_p2_absensi_aslab"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="Pertemuan 3"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:text=""
            android:id="@+id/txt_detail_p3_absensi_aslab"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="Pertemuan 4          "
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:text=""
            android:id="@+id/txt_detail_p4_absensi_aslab"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="2"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_detail_id_absensi_aslab"
        android:textSize="1pt"
        android:textColor="#FAFAFA"/>

</LinearLayout>