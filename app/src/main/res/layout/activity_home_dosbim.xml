<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:background="@color/colorbgBlue"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.dosbim.HomeDosbim"
    tools:showIn="@layout/app_bar_home_dosbim">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<android.support.v7.widget.Toolbar-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="?attr/actionBarSize"-->
            <!--android:background="@color/colorOrange"-->
            <!--app:title="SILAB MIKROPROSESSOR"-->
            <!--app:titleMarginStart="93dp"-->
            <!--android:textAlignment="center"-->
            <!--app:titleTextColor="@color/colorbgBlue"-->
            <!--android:id="@+id/toolbar"-->
            <!--android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->
            <!--app:popupTheme="@style/ThemeOverlay.AppCompat.Light"-->
            <!--android:elevation="4dp"/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/colorOrange"
            >

            <ImageView
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:id="@+id/ivdosen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/avatar"
                />

            <TextView
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/ivdosen"
                android:id="@+id/tvslamatdatangdosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selamat Datang"
                android:fontFamily="@font/nunitosans_bold"
                android:textStyle="bold"
                android:textSize="27sp"
                android:textColor="@color/colorTulisanUniv"
                />

            <TextView
                android:layout_marginStart="25dp"
                android:layout_toRightOf="@+id/ivdosen"
                android:layout_below="@+id/tvslamatdatangdosen"
                android:id="@+id/tvnamadosbim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans_bold"
                android:text="Nama Dosbim"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/colorbgBlue"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            >
            <Button
                android:gravity="center_horizontal"
                android:id="@+id/btdatamhsdosbim"
                android:paddingTop="20dp"
                android:drawableTop="@drawable/imagestrukturorg"
                android:background="@drawable/bgputihwaemail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Data\nMahasiswa"
                android:textSize="12sp"
                />
            <Button
                android:layout_marginStart="25dp"
                android:gravity="center_horizontal"
                android:layout_toRightOf="@+id/btdatamhsdosbim"
                android:id="@+id/btdatalaborandosbim"
                android:paddingTop="20dp"
                android:drawableTop="@drawable/imagestrukturorg"
                android:background="@drawable/bgputihwaemail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Data\nLaboran"
                android:textSize="12sp"
                />
            <Button
                android:layout_marginStart="25dp"
                android:gravity="center_horizontal"
                android:layout_toRightOf="@+id/btdatalaborandosbim"
                android:id="@+id/btdataaslabdosbim"
                android:paddingTop="20dp"
                android:drawableTop="@drawable/imagestrukturorg"
                android:background="@drawable/bgputihwaemail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Data\nAslab"
                android:textSize="12sp"
                />
            <Button
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/btdatamhsdosbim"
                android:id="@+id/btnilaimhsdosbim"
                android:paddingTop="20dp"
                android:drawableTop="@drawable/imagenilai"
                android:background="@drawable/bgputihwaemail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Nilai\nMahasiswa"
                android:textSize="12sp"
                />

            <Button
                android:id="@+id/btabsmhsdosbim"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/btdatalaborandosbim"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/btnilaimhsdosbim"
                android:background="@drawable/bgputihwaemail"
                android:drawableTop="@drawable/imageabsensi"
                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:text="Absensi\nMahasiswa"
                android:textSize="12sp" />
        </RelativeLayout>



        <android.support.v7.widget.LinearLayoutCompat
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.LinearLayoutCompat>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_dosbim"
        app:menu="@menu/dawer_menu_dosbim"
        />

</android.support.v4.widget.DrawerLayout>