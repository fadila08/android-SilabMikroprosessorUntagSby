<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:background="@color/colorbgBlue"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorOrange"
            app:title="SILAB MIKROPROSESSOR"
            app:titleMarginStart="93dp"
            android:textAlignment="center"
            app:titleTextColor="@color/colorbgBlue"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorOrange"
            >

            <ImageView
                android:layout_marginStart="25dp"
                android:id="@+id/ivdosen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_round"
                />

            <TextView
                android:layout_marginStart="25dp"
                android:layout_toRightOf="@+id/ivdosen"
                android:id="@+id/tvslamatdatangdosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selamat Datang"
                android:textStyle="bold"
                android:textSize="27sp"
                android:textColor="@color/colorTulisanUniv"
                />

            <TextView
                android:layout_marginStart="25dp"
                android:layout_toRightOf="@+id/ivdosen"
                android:layout_below="@+id/tvslamatdatangdosen"
                android:id="@+id/tvnamadosbim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Mahasiswa"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/colorbgBlue"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:gravity="center_horizontal"
                android:id="@+id/bttugaspraktikummhs"
                android:paddingTop="20dp"
                android:drawableTop="@drawable/imagetugas"
                android:background="@drawable/bgputihwaemail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Tugas\nPraktikum"
                android:textSize="12sp"
                />
            <Button
                android:layout_marginStart="25dp"
                android:gravity="center_horizontal"
                android:layout_toRightOf="@+id/bttugaspraktikummhs"
                android:id="@+id/btdatasuratmhs"
                android:paddingTop="20dp"
                android:drawableTop="@drawable/imagemail"
                android:background="@drawable/bgputihwaemail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Data\nSurat"
                android:textSize="12sp"
                />
            <Button
                android:layout_marginStart="25dp"
                android:gravity="center_horizontal"
                android:layout_toRightOf="@+id/btdatasuratmhs"
                android:id="@+id/btnilaimhsmhs"
                android:paddingTop="20dp"
                android:drawableTop="@drawable/imagenilai"
                android:background="@drawable/bgputihwaemail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Nilaiku"
                android:textSize="12sp"
                />

        </RelativeLayout>



        <android.support.v7.widget.LinearLayoutCompat
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.LinearLayoutCompat>

        <FrameLayout
            android:id="@+id/fragment_homemahasiswa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_mhs"
        app:menu="@menu/dawer_menu_mhs"
        />

</android.support.v4.widget.DrawerLayout>