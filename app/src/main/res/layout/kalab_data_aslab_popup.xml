<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:padding="5dp"
    android:layout_gravity="center"
    tools:context=".activity.kalab.PopupKalabDataLaboran">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right">

        <Button
            android:layout_width="50px"
            android:layout_height="60px"
            android:background="@drawable/edit_icon"
            android:id="@+id/btn_edit_data_aslab_kalab" />

        <Button
            android:layout_width="50px"
            android:layout_height="60px"
            android:background="@drawable/delete_icon"
            android:id="@+id/btn_delete_data_aslab_kalab" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="Nama          "
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:text=""
            android:id="@+id/txt_detail_nama_aslab_kalab"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="NBI              "
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:text=""
            android:id="@+id/txt_detail_nip_aslab_kalab"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="Nomor Whatsapp"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:text=""
            android:id="@+id/txt_detail_no_wa_aslab_kalab"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="4"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="Alamat Email"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:text=""
            android:id="@+id/txt_detail_email_aslab_kalab"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="#000000"
            android:layout_weight="2"/>

    </LinearLayout>
</LinearLayout>

